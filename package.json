{
  "name": "physical-unit-converter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "lint:check": "prettier . --check",
    "lint:fix": "prettier . --write",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:restart": "docker compose -f infra/compose.yaml up -d --force-recreate",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gillianfranco/physical-unit-converter.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gillianfranco/physical-unit-converter/issues"
  },
  "homepage": "https://github.com/gillianfranco/physical-unit-converter#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "next": "^16.0.3",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "prettier": "^3.6.2"
  }
}
